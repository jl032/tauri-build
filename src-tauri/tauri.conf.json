{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Sapphire",
  "version": "0.1.0",
  "identifier": "com.jonat.sapphire",
  "permissions": [
    "core:default", 
    "opener:allow-open-url",
    "opener:allow-open-external"
  ]
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "https://perplexity.ai",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "Sapphire",
        "url": "https://perplexity.ai",
        "width": 1200,
        "height": 800
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
